meta(charset='UTF-8')
if config.author
  meta(name='author', content=config.author)

if config.description
  meta(name='description', content=config.description)

meta(name='viewport', content='width=device-width, initial-scale=1.0')

//- Twitter card
meta(name='twitter:card', content='summary')
meta(name='twitter:url', content=page.permalink)
if page.title
  meta(name='twitter:title', content=page.title)
else
  meta(name='twitter:title', content=config.title)
if config.description
  meta(name='twitter:description', content=config.description)
if theme.twitter_card.default_image
  meta(name='twitter:image', content=theme.twitter_card.default_image)

//- Google+
if page.title
  meta(itemprop='name', content=page.title)
else
  meta(itemprop='name', content=config.title)
if config.description
  meta(itemprop='description', content=config.description)
if theme.google_plus.default_image
  meta(itemprop='image', content=theme.google_plus.default_image)

//- Facebook Open Graph
if page.title
  meta(property='og:title', content=page.title)
else
  meta(property='og:title', content=config.title)
if config.description
  meta(property='og:description', content=config.description)
if theme.facebook_open_graph.default_image
  meta(property='og:image', content=theme.facebook_open_graph.default_image)
meta(property='og:type', content='article')
meta(property='og:url', content=page.permalink)
meta(property='og:site_name', content=config.title)
meta(property='og:admins', content=config.facebook_open_graph.page_user_id)

//- Pagination
if page.prev
  link(rel='prev', href=url_for(page.prev_link))
if page.next
  link(rel='next', href=url_for(page.next_link))

title
  if page.title
    = page.title
  else
    = config.title

//- Google fonts
link(rel='stylesheet', type='text/css', href='//fonts.googleapis.com/css?family=Open+Sans')
link(rel='stylesheet', type='text/css', href='//fonts.googleapis.com/css?family=Source+Code+Pro')

link(rel='stylesheet', type='text/css', href=theme.cdn.normalize + '/normalize.min.css')
link(rel='stylesheet', type='text/css', href=theme.cdn.carbon + '/css/carbon.css')
link(rel='stylesheet', type='text/css', href=theme.cdn.fontawesome + '/font-awesome.min.css')

if theme.favicon
  link(rel="icon", href=theme.favicon)
